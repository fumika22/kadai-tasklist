<h1>  タスク新規作成ページ</h1>

<div class="row">
  <div class="col-xs-12">
  <div class="col-sm-offset-2 col-sm-8">
  <div class="col-md-offset-2 col-md-8">
  <div class="col-lg-offset-3 col-lg-6">

<%= form_for(@tasks) do |f| %>

<% if @tasks.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @tasks.errors.full_messages.each do |task| %>
        <li>
          <%= task %>
        </li>
<% end %>
      </ul>
    </div>
<% end %>

<div class = "form-group">

<%=f.label :content, "新しいタスク" %>

<%= f.text_field :content, class: 'form-control' %>

</div>
<div class = "form-group">

<%=f.label :status, "新しいステータス" %>

<%= f.text_field :status, class: 'form-control' %>

</div>

<%= f.submit "決定", class: 'btn btn-primary' %>

<% end %>



